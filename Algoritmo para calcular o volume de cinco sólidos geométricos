 public static void main(String[] args) {
  
    System.out.println("Informe o objeto que deseja calcular: ");

    Scanner input = new Scanner(System.in);

    boolean trapézio = true, triângulo = true;

    if(trapézio){
        Double B,b,h,A;
        System.out.println("Indique um valor para B = base maior: ");
        B = input.nextDouble();
        System.out.println("Indique um valor para b = base menor: ");
        b = input.nextDouble();
        System.out.println("Indique um valor para h = altura");
        h = input.nextDouble();

        A = ((B + b)/2)*h;
        System.out.println("O valor dado é B: "+B+" b: "+b+" h: "+h);
        System.out.println("A área do trapézio é igual a: "+A);
        input.close();
    }
    if(triângulo){
        Double B,h,A;
        System.out.println("Indique um valor para B = base: ");
        B = input.nextDouble();
        System.out.println("Indique um valor para h = altura: ");
        h = input.nextDouble();
        
        A = (B*h)/2;
        System.out.println("O valor dado é B: "+B+" h: "+h);
        System.out.println("A área do triângulo é igual a: "+A);
        input.close();
    }   


}
 double base, altura, area;
 
 base = 10.34;
 altura =20;
 area = base * altura;
 
 System.out.println("A área de um retangulo de base = " + base);
 System.out.println("e altura " + altura);
 System.out.println("é " + area);
 
 }
}
